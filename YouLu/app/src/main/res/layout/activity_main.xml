<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpContent"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/radioGroup">

    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/img01_06"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/rbtnRecords"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_bottom_01"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rbtnContacts"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_bottom_02"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rbtnMessage"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_bottom_03"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rbtnDail"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_bottom_04"
            android:button="@null"
            />

    </RadioGroup>

</RelativeLayout>
