<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                tools:context="com.fei.youlu.fragment.FragmentContacts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/img01_02"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Eric"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img06g_03"
            android:id="@+id/ivBack"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/lvMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img02t_02"
        android:paddingTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@null"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/relativeLayout"></ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2"
        android:background="@drawable/img06t_02"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivAdd"
            android:src="@drawable/img06_11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/etMessage"
            android:hint="Input Message"/>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center"
            android:text="Send"
            android:layout_weight="0.06"/>

    </LinearLayout>

</RelativeLayout>